<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
<script>
    $(document).ready(function () {

   

    $('#menutoggle').click(function () {
    $("#wrapper").toggleClass("toggled");
    });

    $('#flyoutCompany').hide();
    $('#flyout').hide();
    $('#flyoutChange').hide();

    $(".addrotate").click(function (e) {
    $(this).toggleClass("down");
    $('#flyout').fadeToggle("slow", "linear");
    $('#flyoutCompany').hide();
    $('#flyoutChange').hide();
    });

    $('.sub-menu').click(function () {
        $('.leftsubmenu').slideDown();
    });


    $("#CompanyInfo").click(function (e) {
       $('#flyoutCompany').fadeToggle("slow", "linear");
       $('#flyout').hide();
       $('#flyoutChange').hide();
    });


    $("#Changename").click(function (e) {
        $('#flyoutChange').fadeToggle("slow", "linear");
        $('#flyout').hide();
        $('#flyoutCompany').hide();
    });


    $('.flytopbar').click(function (e) {
        e.stopPropagation();
    });


    $('html').click(function () {
        $('#flyout').hide();
        $('#flyoutCompany').hide();
        $('#flyoutChange').hide();

    });


    });
</script>

