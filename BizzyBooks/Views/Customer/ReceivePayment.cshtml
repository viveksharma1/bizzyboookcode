
@{
    ViewBag.Title = "ReceivePayment";
    Layout = null;
}

<script type="text/ng-template" id="/ui-tree-select.html">
    <ui-select ng-model="model.$selected"
               ui-select-focuser
               theme="selectize">
        <ui-select-match placeholder="Select a group">
            {{ $select.selected.title }}
        </ui-select-match>
        <ui-select-choices repeat="group in groups | filter: $select.search">
            <div>
                <span ng-bind-html="group.title | highlight: $select.search"></span>
                <!--<span ng-bind-html="'('+group.size+' users)'"></span>
                <a href
                  ng-show="group.parent"
                  class="goto-child-group"
                  ng-click="loadChildGroupsOf(group, $select)">
                  <i class="fa fa-angle-right"></i>
                </a>-->
            </div>
        </ui-select-choices>
    </ui-select>
</script>
<div class="FlexPopup" style="display:block" ng-init="model = {}">
    <div class="flexheader">
        <ul class="list-unstyled submenu InvoiceMenu" style="float:left">
            <li><a href="#"><i class="fa fa-history"></i></a></li>
            <li><a href="#"><span>Receive Payment</span></a></li>
        </ul>
        <ul class="list-unstyled submenu InvoiceMenu">
            <li><a href="#"><i class="fa fa-question-circle"></i></a></li>
            <li><a href="" ng-click="goBack()"><i class="fa fa-times"></i></a></li>
        </ul>
    </div>

    <div class="flexcontainer">
        <div class="lightblue bluebrdr content" style="padding:10px 10px">
            <div class="col-sm-3" style="margin-top:10px">
                <ui-tree-select model="model">
                </ui-tree-select>

                <div id="form-popoverPopup" class="popupbox">
                    <div class="dijitDialogTitle">
                        New Term
                        <i class="fa fa-times-circle cursor pull-right" title="close" ng-click="popuclose()"></i>
                    </div>
                    <div class="form-content">
                        <div class="form-group">
                            <label><span class="red">*</span> Name</label>
                            <input type="text" class="form-control" />
                        </div>
                        <strong>
                            <input type="radio" class="pull-left" /> <span class="pull-left">Due in fixed number of days</span>
                        </strong>
                        <p>
                            <input type="text" class="form-control pull-left" style="width:50px" /> <span class="pull-left">days</span>
                        </p>
                        <strong>
                            <input type="radio" class="pull-left" /> <span class="pull-left">Due by certain day of the month</span>
                        </strong>
                        <p>
                            <input type="text" class="form-control pull-left" style="width:50px" /> <span class="pull-left">day of month</span>
                        </p>
                        <strong>
                            <span class="pull-left">Due the next month if issued within</span>
                        </strong>
                        <p>
                            <input type="text" class="form-control pull-left" style="width:50px" /> <span class="pull-left">days of due date</span>
                        </p>
                        <div class="form-footer">
                            <button type="button" class="btn btn-sm btn-default">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3" style="margin-top:10px">
                <input type="text" class="form-control" placeholder="Email (Separate emails with a comma)" style="margin-bottom:5px" />
                <input type="checkbox" class="pull-left" /> <small class="sendlater">Send later</small>
            </div>
            <div class="pull-right">
                <p class="text-right">BALANCE DUE</p>
                <span class="balancedue">Rs0.00</span>
            </div>
        </div>
        <div class="col-sm-12">


            <div class="col-sm-2 padding5">
                <h4 class="tabheading">Payment date</h4>
                <div class="input-group">
                    <input type="text" class="form-control" id="Paymentdate">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

            </div>
        </div>

        <div class="col-sm-12">

            <div class="col-sm-2 padding5">
                <h4 class="tabheading">Payment method</h4>

                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-default  dropdown-toggle" data-toggle="dropdown" style="width:188px; color:#000 !important; text-align:left;">
                        Cash
                        <i class="fa fa-sort pull-right" style="margin-top:3px"></i>
                    </button>

                    <ul class="dropdown-menu my PaymentFilter" style="width:188px;">
                        <li><a href="#">Cash</a></li>
                        <li><a href="#">Cheque</a></li>
                        <li><a href="#">Credit Card</a></li>


                    </ul>

                </div>

            </div>

            <div class="col-sm-2 padding5">
                <h4 class="tabheading">Reference no.</h4>
                <input type="text" class="form-control" />
            </div>


            <div class="col-sm-3 padding5">
                <h4 class="tabheading">Deposit to</h4>

                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" style="width:280px; color:#000 !important; text-align:left;">
                        Undeposited Funds
                        <i class="fa fa-sort pull-right" style="margin-top:3px"></i>
                    </button>

                    <ul class="dropdown-menu my DepositFilter" style="width:250px;">
                        <li><a href="#">Travel</a></li>
                        <li><a href="#">Deferred Krishi Kalyan Cess Input Credit</a></li>
                        <li><a href="#">Deferred Service Tax Input Credit</a></li>
                        <li><a href="#">Deferred VAT Input Credit</a></li>
                        <li><a href="#">Inventory Asset</a></li>
                        <li><a href="#">Krishi Kalyan Cess Refund</a></li>
                        <li><a href="#">Prepaid Insurance</a></li>
                    </ul>

                </div>
            </div>


            <div class="col-sm-2 padding5 pull-right">
                <h4 class="tabheading">Amount received</h4>
                <input type="text" class="form-control" />
            </div>
        </div>



        <div class="col-sm-12" style="padding-top:30px">
            <h4 data-toggle="collapse" data-target="#AccountDetail" class="cursor"><i class="fa fa-caret-right"></i> Outstanding Transactions details</h4>
            <div class="collapse in" id="AccountDetail">
                <table class="table NewTable" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-right" style="width:50px"><input type="checkbox"></th>
                            <th>Description</th>
                            <th>Due Date</th>
                            <th class="text-right" style="width:150px">Original Amount</th>
                            <th class="text-right" style="width:150px">Open Balance</th>
                            <th class="text-right" style="width:100px">Payment</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="text-right" style="width:50px"><input type="checkbox"></td>
                            <td>Bill (17/08/2016)</td>
                            <td>17/08/2016</td>
                            <td class="text-right">24,000.00</td>
                            <td class="text-right">14,000.00</td>
                            <td class="text-right"><input type="text" class="form-control" value="14,000.000"> </td>
                        </tr>

                        <tr>
                            <td class="text-right" style="width:50px"><input type="checkbox"></td>
                            <td>Bill (17/08/2016)</td>
                            <td>17/08/2016</td>
                            <td class="text-right">40,000.00</td>
                            <td class="text-right">40,000.00</td>
                            <td class="text-right"><input type="text" class="form-control" value="40,000.000"> </td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
        <hr style="float:left; width:100%; margin:5px 0px">

        <div class="col-sm-12">
            <div class="col-sm-3 padding">

                <div class="form-group">
                    <h4 class="tabheading">Memo</h4>
                    <textarea class="form-control" style="height:80px"></textarea>
                </div>
            </div>
            <span class="pull-right" style="width:350px">
                <label class="subtotal" style="font-size:1.3rem;">Amount to Apply</label>
                <span class="subtotalvalue" style="font-size:1.3rem; font-weight:bold">Rs1,54,000.00</span>
                <label class="subtotal" style="font-size:1.3rem;">Amount to Credit</label>
                <span class="subtotalvalue" style="font-size:1.3rem; font-weight:bold">Rs0.00</span>
            </span>
        </div>



    </div>


    <div class="flexfooter">
        <span class="pull-left">
            <button type="button" class="btn btn-sm btn-primary">Cancel</button>
            <button type="button" class="btn btn-sm btn-primary">Clear</button>
        </span>

        <div class="pull-right">
            <button type="button" class="btn btn-sm btn-primary">Save</button>
            <div class="btn-group dropup">
                <button type="button" class="btn btn-info btn-sm">Save and send</button>
                <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width:25px">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" style="right:-2px !important">
                    <li><a href="#">Save and close</a></li>
                    <li><a href="#">Save and send</a></li>
                    <li><a href="#">Save and new</a></li>
                    <li><a href="#">Save and share link</a></li>
                </ul>
            </div>
        </div>
    </div>


</div>

