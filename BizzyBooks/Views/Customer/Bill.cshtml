<div class="FlexPopup" style="display:block" ng-init="model = {}">
    <div class="flexheader">
        <ul class="list-unstyled submenu InvoiceMenu" style="float:left">
            <li><a href="#/Customer/Suppliers"><i class="fa fa-arrow-left" aria-hidden="true"></i></a></li>
            <li><a href="/#/Customer/Suppliers"><span>Create Bill</span></a></li>
            
            
        </ul>
        <ul class="list-unstyled submenu InvoiceMenu">
            <li></li>
            <li><a href="" ng-click="goBack()"><i class="fa fa-times"></i></a></li>
        </ul>
    </div>
    <div class="col-sm-10" style="padding:0px">
        <div class="flexcontainer">
            <div class="lightblue bluebrdr content" style="padding:10px 0px">
                <div class="col-sm-7 padding">
                    <div class="col-sm-6" style="margin-top:10px">
                        <ui-select ui-tree-select ng-model="model.people" id="countryCode"
                                   ui-select-focuser
                                   theme="selectize">
                            <ui-select-match placeholder="Select Suppliers...">{{ $select.selected.company }}</ui-select-match>
                            <ui-select-choices repeat="group in supliers | filter: $select.search">
                                <div>
                                    <span ng-bind-html="group.company | highlight: $select.search"></span>
                                </div>


                            </ui-select-choices>
                        </ui-select>
                        <p ng-init="{{sup = model.people.company}}"> </p>
                        <p ng-init="{{sup = model.people.company}}"> </p>
                       <h3>{{supplier}}</h3> 
                    </div>


                </div>





                <div class="pull-right" style="margin-right:10px;">
                    <p class="text-right">BALANCE DUE</p>
                    <span class="balancedue">Rs{{amount}}</span>
                </div>




            </div>

            <div id="form-popoverPopup" class="popupbox">
                <div class="dijitDialogTitle">
                    New Suppliers
                    <i class="fa fa-times-circle cursor pull-right" title="close" ng-click="popuclose()"></i>
                </div>
                <div class="form-content">
                    <div class="form-group">
                        <label><span class="red">*</span>Suppliers Name</label>
                        <input type="text" ng-model="suppliersName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><span class="red">*</span>Email</label>
                        <input type="text" ng-model="email1" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><span class="red">*</span>Mobile No.</label>
                        <input type="text" ng-model="mobile" class="form-control" />
                    </div>



                    <div class="form-footer">
                        <button type="button" class="btn btn-sm btn-default" ng-click="saveSuppliers()">Save</button>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="col-sm-2 padding5">
                    <h4 class="tabheading font_11">Mailing address</h4>
                    <textarea class="form-control" style="height:95px"></textarea>
                </div>

                <div class="col-sm-2 padding5 claro">
                    <h4 class="tabheading font_11"></h4>

                   

                   



                </div>

                <div class="col-sm-2 padding5">
                    <h4 class="tabheading font_11">Bill Date</h4>
                    <div class='input-group'>
                        <input type='text' class="form-control" ng-model="billDate" id='BillDate' />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>


                </div>

                <div class="col-sm-2 padding5">
                    <h4 class="tabheading font_11">Due Date</h4>
                    <div class='input-group'>
                        <input type='text' class="form-control"ng-model="billDueDate" id='DueDate' />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>


                </div>

                <div class="col-sm-1 padding5 pull-right">
                    <h4 class="tabheading font_11">Bill no.</h4>
                    <input type="text" class="form-control" ng-model="billNo"  disabled />
                </div>
            </div>



           



            <hr style="float:left; width:100%;" />


            <div class="col-sm-12">
                <h4 data-toggle="collapse" data-target="#ItemDetail2"><i class="fa fa-caret-right"></i> Item details</h4>
                <div class="collapse in" id="ItemDetail2"  ng-init="role = admin">
                    <table class="table NewTable" id="ItemTable">
                        <thead>
                            <tr>

                                <th>Grade</th>
                                <th>Finish</th>
                                <th>Thickness (MM)</th>
                                <th>Width (MM)</th>
                                <th>Length</th>
                                <th>Net Weight (MT)</th>
                                <th>Gross Weight (MT)</th>
                                <th>Sheets NO</th>
                                <th>Unit Price cif USD/MT($)</th>
                                <th>Amount CIF($)</th>
                                <th ng-hide="role =='2'||role =='1'"> Msc.Charges($)</th>
                                <th>Amount(INR)</th>
                                

                            </tr>
                        </thead>
                        <tbody ng-repeat="item in billtable">
                            <tr>


                                <td> {{item.grade}}</td>
                                <td> {{item.finish}}</td>
                                <td> {{item.thickness}}</td>
                                <td> {{item.width}}</td>
                                <td> {{item.length}}</td>
                                <td> {{item.netweight}}</td>
                                <td> {{item.grossweight}}</td>
                                <td> {{item.sheetNo}}</td>
                                <td> {{item.fobRate}}</td>
                                <td> {{item.cif}}</td>
                                <td ng-hide="role =='2'||role =='1'"> {{item.miscCharge}}</td>
                                <td> {{item.charges}}</td>
                               

                            </tr>


                        </tbody>
                    </table>

                   


                </div>
            </div>


            <hr style="float:left; width:100%; margin:5px 0px" />
            <div class="col-sm-12">
                <div class="col-sm-4 padding">

                    <div class="form-group">
                        <h4 class="tabheading">Memo</h4>
                        <textarea class="form-control" style="height:80px"></textarea>
                    </div>
                </div>
                <span class="pull-right" style="width:350px">
                    <label class="subtotal" style="font-size:1.3rem;">Subtotal</label>
                    <span class="subtotalvalue" style="font-size:1.3rem; font-weight:bold">Rs{{amount}}</span>
                    <label class="subtotal" style="font-size:1.5rem;">Total</label>
                    <span class="subtotalvalue" style="font-size:1.5rem; font-weight:bold">Rs{{amount}}</span>
                </span>
            </div>

            <hr style="float:left; width:100%; margin:5px 0px" />

            <div class="col-sm-12" style="margin-bottom:20px">
                <div class="col-sm-4 padding">

                    <div class="form-group">
                        <h4 class="tabheading">Attachments</h4>
                        <div class="attachmets">
                            <input type="file" id="uploadBtn" multiple="multiple" name="browsefile">
                            <div>
                                <i class="fa fa-plus"></i>
                                <p>Add file</p>
                            </div>
                        </div>


                    </div>
                </div>
                <div id="upload_prev" class="upload_prev"></div>
            </div>
        </div>
    </div>

    <div class="col-sm-2" style="padding:0px;">
        <div class="lightblue bluebrdr flexcontainer" style="padding:0px 10px">
            <h3 class="AddBill">Add to Bill</h3>

            <button type="button" class="btn btn-default btn-sm">Add all</button>



            <div class="PurchaseBox" ng-repeat="data in polist ">
                <h3>{{data.supliersName}}</h3>
                <small>{{data.date}}</small>
                <strong>{{data.no}} </strong>
                
                <br /><strong>Amount Rs{{data.amount}} </strong><br />
                <ul class="Purchasefooter list-unstyled">
                    <li ng-click="addtoBill($index)"><strong><i class="fa fa-long-arrow-left"></i> Add</strong></li>
                    <li><a ui-sref="Customer.PdfView({po:data.no,enq:2})">View</a></li>
                </ul>

            </div>




        </div>
    </div>

    <div class="flexfooter">
        <span class="pull-left">
            <button type="button" class="btn btn-sm btn-primary"><a href="/#/Customer/Suppliers">Cancel</a></button>
            <button type="button" class="btn btn-sm btn-primary">Clear</button>
        </span>

        <div class="pull-right">
            <button type="button" class="btn btn-sm btn-primary">Save</button>
            <div class="btn-group dropup">
                <button type="button" class="btn btn-info btn-sm" ng-click ="saveBill()">Save and send</button>
                <button type="button" class="btn btn-info btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width:25px">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" style="right:-2px !important">
                    <li><a href="#">Save and close</a></li>
                    <li><a href="#">Save and send</a></li>
                    <li><a href="#">Save and new</a></li>
                    <li><a href="#">Save and share link</a></li>
                </ul>
            </div>
        </div>
    </div>


</div>


